<%- include("partials/header2"); -%>
<form action="/register" method="POST">
	<div class="signIn">
		<h1 class="h3 mb-3 fw-normal">Signup to My Journal!</h1>
		<input
			type="text"
			class="form-control top"
			placeholder="Name"
			name="FirstName"
			required
			autofocus
		/>
		<input
			type="email"
			class="form-control middle"
			placeholder="Email address"
			name="username"
			required
		/>
		<input
			type="password"
			class="form-control middle"
			placeholder="Password"
			name="password"
			required
		/>
		<input
			type="password"
			class="form-control bottom"
			placeholder="Confirm Password"
			name="ConfirmPassword"
			required
		/>
		<input type="hidden" name="pageCheck" value="0">
		<button class="w-100 btn btn-lg btn-primary" type="submit">
			Sign Me Up!
		</button>
		<p style="margin-top: 20px; color: red;"><%=message%></p>

		<p>-------------Or Sign Up Using-------------</p>

		<div class="container">
			<div class="row">
				<div class="col">
					<a href="/auth/facebook" role="button"
						><i class="fab fa-facebook fa-3x"></i
					></a>
				</div>
				<div class="col">
					<a href="/auth/google" role="button"
						><i class="fab fa-google fa-3x"></i
					></a>
				</div>
				<div class="col">
					<a href="/auth/twitter" role="button"
						><i class="fab fa-twitter fa-3x"></i
					></a>
				</div>
			</div>
		</div>
	</div>
	<div class="signIn redirect">
		<span>
			Have an account? <a href="/login"> <span>Log In</span></a>
		</span>
	</div>
</form>
<%- include("partials/footer2"); -%>
